{
  "name": "abai-springs-backend",
  "version": "1.0.0",
  "description": "Backend API for Abai Springs Water Delivery System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.prod.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production nodemon server.prod.js",
    "setup-auth": "node scripts/setupAuth.js",
    "seed": "node seed.js",
    "optimize-db": "node scripts/optimizeDatabase.js",
    "test": "echo \"Authentication tests not implemented yet\"",
    "test:auth": "echo \"Authentication tests not implemented yet\"",
    "test:coverage": "echo \"Coverage tests not implemented yet\"",
    "build": "echo 'Build step skipped - not needed for Railway deployment'",
    "docker:build": "docker build -t abai-springs .",
    "docker:run": "docker run -p 3001:3001 abai-springs",
    "docker:compose": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.prod.yml down",
    "health": "node healthcheck.js",
    "logs": "docker-compose -f docker-compose.prod.yml logs -f app",
    "deploy": "npm run build && npm run docker:compose"
  },
  "keywords": [
    "water-delivery",
    "ecommerce",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Abai Springs",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@adminjs/express": "^6.1.1",
    "@adminjs/mongoose": "^4.1.0",
    "@sendgrid/mail": "^8.1.5",
    "adminjs": "^7.8.17",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.2.1",
    "google-auth-library": "^9.4.0",
    "helmet": "^7.1.0",
    "http-graceful-shutdown": "^3.1.13",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "stripe": "^14.9.0",
    "twilio": "^4.23.0",
